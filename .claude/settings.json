{
  "permissions": {
    "allow": [
      "SlashCommand(/kiro:*)",
      "mcp__playwright-test",
      "mcp__chrome-devtools",
      "mcp__serena",
      "mcp__MCP_DOCKER",
      "mcp__supabase",
      "mcp__next-devtools",
      "mcp__ide",
      "mcp__playwright",
      "Bash(pnpm:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",
      "Bash(git checkout:*)",
      "Bash(git push:*)",
      "Bash(git pull:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git revert:*)",
      "Bash(git cherry-pick:*)",
      "Bash(git stash:*)",
      "Bash(git tag:*)",
      "Bash(git worktree:*)",
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      "Bash(ls:*)",
      "Bash(cd:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(curl:*)",
      "Bash(cat:*)",
      "Bash(supabase:*)",
      "WebSearch"
    ],
    "deny": []
  },
  "hooks": {
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/Library/Sounds/notification.aiff"
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "afplay ~/Library/Sounds/caution.aiff"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.js"
  },
  "alwaysThinkingEnabled": true
}
